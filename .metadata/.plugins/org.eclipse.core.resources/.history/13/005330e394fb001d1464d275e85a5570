package searchingAlgo;

import java.util.Scanner;

public class OccuranceNum_BinarySearch_Assign_3
{

	public static void main(String[] args) 
	{
		Scanner sc=new Scanner(System.in);
		
		System.out.println("Enter an size");
		int a=sc.nextInt();
		
		
		int arr[]=new int[a];
		
		for (int i = 0; i < arr.length; i++) 
		{
			System.out.println("Enter an element at " + i +" index");
			arr[i]=sc.nextInt();
		}
		
		System.out.println("Enter an Target elements");
		int x=sc.nextInt();
		
		
		System.out.println("You enter is --");
		
		for (int i = 0; i < arr.length; i++) 
		{
			System.out.print(arr[i] + " ");
		}
		
		System.out.println("\n");
		
		occuranceRecord(arr,x);
		
		

	}
	
	public static void occuranceRecord(int[] a,int x)
	{
		int lower_Index =0;
		int higher_Index = a.length-1;
		
		while(lower_Index<=higher_Index)
		{
			int mid = lower_Index + (higher_Index - lower_Index)/2;
			
			if(a[mid] == lower_Index)
			{
				lower_Index = mid-1;
			}
			else
			{
				
			}
					
		}
	}

}
